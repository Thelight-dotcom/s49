<body>

    <div id="core-node" onclick="initiateHandshake()"></div>

    <div id="auth-portal">
        <p class="status-msg">Origin 49 Serialized Node Assignment Required</p>
        <input type="password" id="node-id" class="clinical-input" placeholder="01—49" maxlength="2">
        <p id="feedback" style="margin-top: 30px; font-size: 0.65rem; color: #333; letter-spacing: 0.4em;"></p>
    </div>

    <script>
        function initiateHandshake() {
            const core = document.getElementById('core-node');
            const portal = document.getElementById('auth-portal');
            
            core.style.opacity = '0';
            setTimeout(() => {
                core.style.display = 'none';
                portal.style.display = 'block';
                document.getElementById('node-id').focus();
            }, 600); /* 0.6s Resistance Standard */
            
            console.log("S49 PROTOCOL: Handshake active. Verifying node resistance...");
        }

        document.getElementById('node-id').addEventListener('input', function(e) {
            const val = e.target.value;
            const feedback = document.getElementById('feedback');
            
            if(val.length === 2) {
                const nodeNum = parseInt(val);
                if(nodeNum >= 1 && nodeNum <= 49) {
                    feedback.innerText = "NODE " + val + " RECOGNIZED. 0.6Ω ALIGNMENT ACTIVE.";
                    feedback.style.color = "#00F3FF";
                } else {
                    feedback.innerText = "UNAUTHORIZED NODE. REVERTING TO SILENCE.";
                    feedback.style.color = "#FF3B3B";
                    setTimeout(() => { location.reload(); }, 2000);
                }
            }
        });
    </script>
