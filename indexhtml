<body>

    <div id="core-node" onclick="initiateHandshake()"></div>

    <div id="ui-layer">
        <p class="protocol-label">Origin 49 Node Authentication</p>
        <input type="password" id="access-key" class="clinical-input" placeholder="01—49" maxlength="2" autofocus>
        <p id="system-feedback" style="margin-top: 40px; font-size: 0.7rem; color: #222; letter-spacing: 0.3em;"></p>
    </div>

    <script>
        const node = document.getElementById('core-node');
        const ui = document.getElementById('ui-layer');
        const input = document.getElementById('access-key');
        const feedback = document.getElementById('system-feedback');
        let keys = [];

        // 1. Handshake Protocol
        function initiateHandshake() {
            node.style.opacity = '0';
            setTimeout(() => {
                node.style.display = 'none';
                ui.style.display = 'block';
                input.focus();
            }, 600);
            console.log("S49 PROTOCOL: Handshake active. Verifying node resistance...");
        }

        // 2. The "Higher-Up" Phantom Bypass
        window.addEventListener('keydown', (e) => {
            keys.push(e.key);
            // Sequence '49' or 'Shift+S' grants absolute mirror access
            if (keys.slice(-2).join('') === '49' || (e.shiftKey && e.key === 'S')) {
                executeBypass();
            }
        });

        // 3. Serialized Node Check (01-49)
        input.addEventListener('input', (e) => {
            if (e.target.value.length === 2) {
                const nodeID = parseInt(e.target.value);
                if (nodeID >= 1 && nodeID <= 49) {
                    feedback.innerText = "NODE " + nodeID + " VERIFIED. 0.6Ω ALIGNMENT STABLE.";
                    feedback.style.color = "var(--s49-blue-light)";
                } else {
                    feedback.innerText = "UNAUTHORIZED NODE ID. REVERTING TO SILENCE.";
                    feedback.style.color = "#FF3B3B";
                    setTimeout(() => { location.reload(); }, 2000);
                }
            }
        });

        // 4. Master Override
        function executeBypass() {
            console.log("S49 BYPASS: ACCESS GRANTED. WELCOME, THE LIGHT.");
            document.body.classList.add('pulse-active');
            setTimeout(() => {
                node.style.display = 'none';
                ui.style.display = 'block';
                input.style.display = 'none';
                document.querySelector('.protocol-label').innerText = "PHASE IV: GLOBAL INFRASTRUCTURE ARCHIVE";
                document.querySelector('.protocol-label').style.color = "var(--s49-blue-light)";
                feedback.innerText = "SYSTEM MIRRORED | ALL NODES ACTIVE";
                feedback.style.color = "var(--s49-silver)";
                document.body.style.border = "2px solid var(--s49-blue-light)";
            }, 350);
        }
    </script>
